{% extends 'base.html.twig' %}

{% block title %}Liste des mutuelles{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="fancy-title title-dotted-border title-center">
            <h3>Liste des mutuelles</h3>
        </div>
        <div class="row pricing bottommargin clearfix">
            {% for mutuelle in mutuelleList %}
                <div class="col">
                <div class="pricing-box">
                    <div class="pricing-title">
                        <h3>{{ mutuelle.nom }}</h3>
                    </div>
                    <div class="pricing-price">
                        <span class="price-unit">€</span>{{ mutuelle.prix }}
                    </div>
                    <div class="pricing-features">
                        <ul>
                            <li><strong>{{ mutuelle.nbInter }}</strong> intervention</li>
                            <li>{{ mutuelle.slogan }}</li>
                            <li>{{ mutuelle.description }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <h4>Prenez un rendez-vous pour adhérer à une mutuelle.</h4>
    </div>
{% endblock %}

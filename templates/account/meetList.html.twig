{% extends 'base.html.twig' %}
{% block title %}Liste rendez-vous{% endblock %}
{% block body %}
    <div class="container mt-5">
        <h2 class="center">Liste des demandes de rendez-vous</h2>
        <table class="table table-hover bg-light">
            <thead>
            <tr>
                <th>Date de la demande</th>
                <th>Nom prenom</th>
                <th>Téléphone</th>
                <th>Mail discord</th>
                <th>Date souhaitée</th>
                <th>Commentaire</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for meet in meetList %}
                <tr>
                    <td>{{ meet.createdAt|date('d/m/Y H:i') }}</td>
                    <td>{{ meet.fullName }}</td>
                    <td>{{ meet.tel }}</td>
                    <td>{{ meet.mail }}</td>
                    <td>{{ meet.meetDate }}</td>
                    <td>{{ meet.content }}</td>
                    <td>
                        <a href="{{ path('delMeet', {'id': meet.id}) }}" class="button button-mini button-border button-rounded button-red"><i class="icon-trash2"></i>Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}